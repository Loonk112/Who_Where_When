<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="ID" />

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_Name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/gray"
            android:text="Name" />

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_Surname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Surname" />

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_TimeStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Start" />

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_TimeStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Stop" />

        <TextView
            android:id="@+id/ManRecView_EmployeeTime_TimeSum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Sum" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.01dp"/>
</LinearLayout>