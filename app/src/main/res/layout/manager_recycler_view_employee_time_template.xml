<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ManRecView_EmployeeTime_Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="ID" />

    <TextView
        android:id="@+id/ManRecView_EmployeeTime_Name"
        android:background="@color/gray"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Name" />

    <TextView
        android:id="@+id/ManRecView_EmployeeTime_Surname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Surname" />

    <TextView
        android:id="@+id/ManRecView_EmployeeTime_TimeStart"
        android:background="@color/gray"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Start" />

    <TextView
        android:id="@+id/ManRecView_EmployeeTime_TimeStop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Stop" />

    <TextView
        android:id="@+id/ManRecView_EmployeeTime_TimeSum"
        android:background="@color/gray"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Sum" />
</LinearLayout>