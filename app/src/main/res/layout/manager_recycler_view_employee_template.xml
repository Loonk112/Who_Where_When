<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ManRecView_EmpTemp_DeleteEmployee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:contentDescription="Remove employee"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/ManRecView_EmpTemp_EmployeeId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/gray"
            android:gravity="center"
            android:text="ID" />

        <TextView
            android:id="@+id/ManRecView_EmpTemp_EmployeeName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="Name" />

        <TextView
            android:id="@+id/ManRecView_EmpTemp_EmployeeSurname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/gray"
            android:gravity="center_vertical"
            android:text="Surname" />

        <Button
            android:id="@+id/ManRecView_EmpTemp_EmployeePerm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Perm"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/ManRecView_EmpTemp_EmployeeDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:contentDescription="See employee details"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.01dp"/>

</LinearLayout>