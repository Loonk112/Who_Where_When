<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ManRecView_TaskGroupTime_TaskId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="ID" />

        <TextView
            android:id="@+id/ManRecView_TaskGroupTime_TaskName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/gray"
            android:gravity="center_vertical"
            android:text="Task Name" />

        <TextView
            android:id="@+id/ManRecView_TaskGroupTime_TimeStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Start" />

        <TextView
            android:id="@+id/ManRecView_TaskGroupTime_TimeStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Stop" />

        <TextView
            android:id="@+id/ManRecView_TaskGroupTime_TimeSum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Sum" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.01dp"/>
</LinearLayout>