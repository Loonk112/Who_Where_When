<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageButton
        android:id="@+id/ManRecView_TaskGroTemp_DeleteTaskGroup"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_remove_24"
        android:contentDescription="Remove task group"/>

    <TextView
        android:id="@+id/ManRecView_TaskGroTemp_TaskGroupId"
        android:background="@color/gray"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ID" />

    <TextView
        android:id="@+id/ManRecView_TaskGroTemp_TaskGroupName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:text="Task Group Name" />

    <ImageButton
        android:id="@+id/ManRecView_TaskGroTemp_TaskGroupTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_access_time_24"
        android:contentDescription="See task group details"/>
</LinearLayout>